<form model="animal" attrs='{"readonly":[["state","=","done"]]}'>
    <head>
        <field name="state"/>
        <button string="Print" icon="print" action="animal_form"/>
        <button string="Options" dropdown="1">
            <item string="To Draft" method="to_draft"/>
        </button>
    </head>
    <tabs>
        <tab string="General">
            <group form_layout="stacked">
                <field name="state"/>
                <field name="date"/>
                <field name="name" size="13" onchange="onchange_name" placeholder="Ex:1022-301-033 xxx xxx" focus="1"/>
                <field name="mydec"/>
                <field name="test"/>
                <field name="lines" nolabel="1">
                    <list colors='{"amount,#f00":[["food_id","=",1]],"#ccc":[["amount","=",500]]}'>
                        <field name="qty" onchange="update_amount"/>
                        <field name="unit_price" onchange="update_amount"/>
                        <field name="amount" onchange="update_amount"/>
                    </list>
                </field>
                <field name="note" readonly="1"/>
            </group>
            <group>
                <group span="8">
                </group>
                <group span="4" columns="1">
                    <field name="amount_total"/>
                </group>
            </group>
        </tab>
        <tab string="Address Details">
            <group form_layout="stacked">
                <field name="addresses" view="form_list"/>
            </group>
        </tab>
    </tabs>
    <related>
        <field name="comments"/>
    </related>
    <foot>
        <button string="Wiz" action="wiz_test"/>
    </foot>
</form>
