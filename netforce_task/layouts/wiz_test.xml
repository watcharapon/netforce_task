<form model="wiz.test" title="My Wizard">
    <field name="name" onchange="onchange_name"/>
    <field name="lines" nolabel="1" count="10">
        <list>
            <field name="qty" onchange="update_amount"/>
            <field name="uom_id" attrs='{"required":[["qty","=",2]]}'/>
            <field name="unit_price" onchange="update_amount"/>
            <field name="amount"/>
        </list>
    </field>
    <group span="12">
        <group span="4">
        </group>
        <group span="8">
            <field name="amount_total" span="6" offset="4"/>
        </group>
    </group>
</form>
